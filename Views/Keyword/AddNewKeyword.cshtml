@using  Spark.Enums
@model KeywordModel
@{
    ViewData["Title"] = "Add new keyword";
}
<style>
    body {
        height: 100%;
        background: linear-gradient(0.25turn, #1A86AC, #139D9D,#06C38B);
    }
</style>

<div class="container card" style=" background-color: #1B0035 !important; border-color: #1B0035 !important;">
    <h3 class="display-4" style="color:white">Add new keyword</h3>
    <hr />
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations</strong> You have added new keyword successfully.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post" enctype="multipart/form-data" asp-action="AddNewKeyword" asp-controller="Keyword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="KeywordContent" class="control-label" style="color:white"></label>
            <input asp-for="KeywordContent" class="form-control" />
            <span asp-validation-for="KeywordContent" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProjectId" class="control-label" style="color:white"></label>
            <input asp-for="ProjectId" class="form-control" />
            <span asp-validation-for="ProjectId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Add Keyword" class="btn btn-primary" />
        </div>
    </form>
</div>